#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail


powered() {
    status="$(echo 'show' | bluetoothctl | rg Powered | cut -f 2 -d ' ')"
    if [ "$status" = 'yes' ]; then
        return 0
    else
        return 1
    fi
}

if powered; then
    echo 'power off' | bluetoothctl > /dev/null
    echo 'off'
else
    echo 'power on' | bluetoothctl > /dev/null
    echo 'on'
fi


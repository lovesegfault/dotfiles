#!/bin/bash

echo "-------------------------" >> ~/.sway.log
echo "$(timedatectl | rg -i "local time" | cut -f 2- -d ':')" >> ~/.sway.log
echo "-------------------------" >> ~/.sway.log

echo "Setting systemd vars"
eval "$(systemctl --user show-environment)"

DISPLAY=':0'
dbus-update-activation-environment --all >> ~/.sway.log 2>&1

echo "Starting gnome-keyring"
eval "$(/usr/bin/gnome-keyring-daemon --daemonize --start --components=pkcs11,secrets,ssh,gpg)"
export SSH_AUTH_SOCK
export GPG_AGENT_INFO
export GNOME_KEYRING_CONTROL
export GNOME_KEYRING_PID

echo "Exporting envvars"
# qt
export QT_QPA_PLATFORM=wayland
export QT_WAYLAND_FORCE_DPI=physical
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
# java
export _JAVA_AWT_WM_NONREPARENTING=1
# elementary
export ECORE_EVAS_ENGINE=wayland_egl
export ELM_ENGINE=wayland_egl
# sdl
export SDL_VIDEODRIVER=wayland
#gnome
export XDG_CURRENT_DESKTOP=GNOME
export DESKTOP_SESSION=gnome

echo "Starting sway"
exec sway >> ~/.sway.log 2>&1

GRUB_DISTRIBUTOR="Gentoo"

# Default menu entry
GRUB_DEFAULT=0
# Boot the default entry this many seconds after the menu is displayed
GRUB_TIMEOUT=0
#GRUB_TIMEOUT_STYLE=menu
GRUB_RECORDFAIL_TIMEOUT=$GRUB_TIMEOUT

